<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/body_background" android:id="@+id/login_layout">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:id="@+id/relativeLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/login_topline"
                android:layout_alignParentBottom="true" android:layout_alignParentRight="true">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/server_msg"
                      android:textSize="18dp" android:text="New Text"
                      android:textColor="#3A454E" android:layout_marginLeft="15dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/server_url_msg" android:textColor="#3A454E" android:textSize="11dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/server_edit"
                   android:src="@drawable/iocn_edit_blue"
                   android:layout_alignTop="@+id/login_topline"
                   android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/linearLayout" android:layout_below="@+id/relativeLayout"
                  android:layout_marginLeft="9dp" android:layout_marginRight="9dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="38dp"
                      android:orientation="horizontal"
                      android:id="@+id/linearLayoutName"
                      android:background="@drawable/button_name_password"
                      android:layout_marginTop="109dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/iocn_name_normal"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="10dp"/>
            <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                      android:id="@+id/login_username"
                      android:textSize="17dp" android:hint="@string/user_name"
                      android:layout_marginLeft="6dp"
                      android:layout_gravity="center_vertical"
                      android:background="#00000000" android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="38dp"
                      android:orientation="horizontal"
                      android:id="@+id/linearLayoutPSD"
                      android:background="@drawable/button_name_password"
                      android:layout_marginTop="14dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/iocn_password_normal"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:id="@+id/login_password"
                    android:textSize="17dp" android:hint="@string/password" android:layout_marginLeft="10dp" android:ems="10"
                    android:layout_gravity="center_vertical"
                    android:background="#00000000" android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="38dp" android:text="登录"
                  android:id="@+id/login_submit" android:background="@drawable/button_login_normal"
                  android:gravity="center"
                  android:textSize="18dp"
                  android:layout_marginTop="14dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/delete"
            android:id="@+id/server_delete" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:textColor="#ff007aff" android:textSize="17dp" android:gravity="center"
            android:background="@drawable/delete_server_background" android:layout_marginBottom="50dp"/>
</RelativeLayout>