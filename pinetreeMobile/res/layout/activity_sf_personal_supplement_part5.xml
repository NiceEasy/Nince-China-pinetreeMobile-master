<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/NomalTextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_DefecationCondition" />

            <EditText
                android:id="@+id/et_DefecationCondition"
                style="@style/NomalEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/NomalTextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_DefecationReason" />

            <EditText
                android:id="@+id/et_DefecationReason"
                style="@style/NomalEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/NomalTextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_DefecationDrugUse"
                android:layout_marginBottom="5dp"
                  />

            <EditText
                android:id="@+id/et_DefecationDrugUse"
                style="@style/NomalEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

            <CheckBox
                 android:id="@+id/cb_DefecationConstipationAndDiarrhea"
                style="@style/NomalTextViewTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/str_DefecationConstipationAndDiarrhea"
                android:button="@drawable/bt_checkbox_selector"
                android:layout_marginLeft="10dp" />

    

</LinearLayout>